{
    "$schema": "https://railway.com/railway.schema.json",
    "build": {
        "builder": "python"
    },
    "deploy": {
        "startCommand": "python simple_server.py",
        "healthcheckPath": "/health",
        "restartPolicyType": "ON_FAILURE",
        "restartPolicyMaxRetries": 10,
        "watchPatterns": ["/*/**", "/*.py", "/*.txt", "/*.toml", "/*.json"]
    }
}
